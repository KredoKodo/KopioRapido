<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KopioRapido"
             xmlns:converters="clr-namespace:KopioRapido.Converters"
             x:Class="KopioRapido.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolInverterConverter x:Key="InverseBoolConverter"/>
            <converters:PercentToProgressConverter x:Key="PercentToProgressConverter"/>
            <converters:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter"/>
            <converters:BytesToStringConverter x:Key="BytesToStringConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
